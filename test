-- –ß–∏—Ç –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–π —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏–∏ –∫ –∑–æ–ª–æ—Ç—ã–º –±–ª–æ–∫–∞–º
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local RunService = game:GetService("RunService")

local function teleportToCoins()
    -- –ñ–¥–µ–º –∑–∞–≥—Ä—É–∑–∫–∏ –ø–µ—Ä—Å–æ–Ω–∞–∂–∞
    local character = player.Character or player.CharacterAdded:Wait()
    local humanoid = character:WaitForChild("Humanoid")
    local rootPart = character:WaitForChild("HumanoidRootPart")

    -- –°–æ–∑–¥–∞–µ–º –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å
    local screenGui = Instance.new("ScreenGui", player.PlayerGui)
    local textLabel = Instance.new("TextLabel", screenGui)
    textLabel.Size = UDim2.new(0, 200, 0, 50)
    textLabel.Position = UDim2.new(0.5, -100, 0, 10)
    textLabel.Text = "üîç –ü–æ–∏—Å–∫ –±–ª–æ–∫–æ–≤..."
    textLabel.BackgroundTransparency = 0.7
    textLabel.TextColor3 = Color3.new(1, 1, 1)

    -- –û—Å–Ω–æ–≤–Ω–æ–π —Ü–∏–∫–ª —Ç–µ–ª–µ–ø–æ—Ä—Ç–∞—Ü–∏–∏
    local connection
    connection = RunService.Heartbeat:Connect(function()
        local closestBlock, closestDistance = nil, math.huge
        
        -- –ò—â–µ–º –±–ª–∏–∂–∞–π—à–∏–π –±–ª–æ–∫
        for _, obj in ipairs(workspace:GetChildren()) do
            if obj.Name == "CoinBlock" and obj:IsA("BasePart") then
                local distance = (obj.Position - rootPart.Position).Magnitude
                if distance < closestDistance then
                    closestBlock = obj
                    closestDistance = distance
                end
            end
        end

        -- –¢–µ–ª–µ–ø–æ—Ä—Ç–∏—Ä—É–µ–º—Å—è –µ—Å–ª–∏ –Ω–∞—à–ª–∏ –±–ª–æ–∫
        if closestBlock then
            textLabel.Text = "üí∞ –ë–ª–æ–∫ –Ω–∞–π–¥–µ–Ω! TP..."
            rootPart.CFrame = CFrame.new(closestBlock.Position + Vector3.new(0, 3, 0))
        else
            textLabel.Text = "üîç –ë–ª–æ–∫–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω—ã"
        end
    end)

    -- –§—É–Ω–∫—Ü–∏—è –æ—Ç–∫–ª—é—á–µ–Ω–∏—è —á–∏—Ç–∞
    return function()
        connection:Disconnect()
        screenGui:Destroy()
    end
end

-- –ó–∞–ø—É—Å–∫ –∏ –≤–æ–∑–≤—Ä–∞—Ç —Ñ—É–Ω–∫—Ü–∏–∏ –æ—Ç–∫–ª—é—á–µ–Ω–∏—è
return teleportToCoins()
